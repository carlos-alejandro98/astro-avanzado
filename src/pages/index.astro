---
import MainLayout from "@/Layout/MainLayout.astro";
---

<MainLayout title="Home">
	<section class="grid items-center text-center text-white h-[70vh]">
		<div>
			<h1 class="text-4xl font-bold">Home</h1>
			<h3 class="text-2xl mt-3">Visita Nuestros blogs del d√≠a</h3>
			<div class="w-full flex justify-center items-center mt-8">
				<a href="/blog">
					<span class="text">Blogs</span>
				</a>
			</div>
		</div>
	</section>
</MainLayout>

<style>
	a {
		align-items: center;
		background-image: linear-gradient(
			144deg,
			#af40ff,
			#5b42f3 50%,
			#00ddeb
		);
		border: 0;
		border-radius: 8px;
		box-shadow: rgba(151, 65, 252, 0.2) 0 15px 30px -5px;
		box-sizing: border-box;
		color: #ffffff;
		display: flex;
		font-family: Phantomsans, sans-serif;
		font-size: 18px;
		justify-content: center;
		line-height: 1em;
		max-width: 140px;
		padding: 3px;
		text-decoration: none;
		user-select: none;
		-webkit-user-select: none;
		touch-action: manipulation;
		white-space: nowrap;
		cursor: pointer;
		transition: all 0.3s;
	}

	a:active,
	a:hover {
		outline: 0;
	}

	a span {
		background-color: rgb(5, 6, 45);
		padding: 16px 24px;
		border-radius: 6px;
		width: 100%;
		height: 100%;
		transition: 300ms;
	}

	a:hover span {
		background: none;
	}

	a:active {
		transform: scale(0.9);
	}
</style>
